<div id="captureddata-form">

    <div class="formHolder">

        <h3 tal:content="view/label">Please give us some details</h3>
        
        <dl class="portalMessage" tal:condition="view/status"
            tal:attributes="class python:view.errors and 'portalMessage error' or 'portalMessage info'">
            <dt i18n:translate="label_error" tal:condition="view/errors">Error</dt>
            <dt i18n:translate="label_info" tal:condition="not:view/errors">Info</dt>
            <dd tal:content="view/status">Status</dd>
        </dl>
        
        <form action="." method="POST"
            tal:attributes="action request/getURL; enctype view/enctype">
        
                <ul>
                
                    <tal:block tal:repeat="widget view/widgets/values">
                                
                        <li tal:define="error widget/error;
                                        hidden python:widget.mode == 'hidden'"
                            tal:omit-tag="hidden">
                            
                            <label for=""
                                   tal:attributes="for widget/id"
                                   tal:condition="not:hidden">
                                <span tal:condition="python:widget.required and not hidden">*</span>
                                <span tal:replace="widget/label">label</span>
                            </label>

                            <div tal:condition="error"
                                 tal:content="structure error/render">
                                Error
                            </div>
                            
                            <input type="text" tal:replace="structure widget/render" />
                            
                        </li>
                        
                    </tal:block>
                    
                    <li>
                        <tal:block repeat="action view/actions/values|nothing">
                            <input type="submit" tal:replace="structure action/render" />
                        </tal:block>
                    </li>
                        
                </ul>

                <input type="hidden" name="uid" value="" tal:attributes="value request/uid|nothing" tal:condition="request/uid|nothing" />
        
        </form>
    
    </div>

</div>