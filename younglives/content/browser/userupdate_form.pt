<tal:define define="username request/username|nothing">

    <dl class="portalMessage warning" tal:condition="python:not (username or view.user())">
        <dt>Warning</dt>
        <dd>User with username "<span tal:content="python:username or '???'">jdoe</span>" wasn't found.</dd>
    </dl>

    <tal:user condition="view/user">
    
        <tal:block>
            <h2 tal:condition="not:username"
                i18n:translate="my_profile">My profile</h2>
    
            <h2 tal:condition="username"
                i18n:translate="label_profile_of_user">
                <span i18n:name="username" tal:replace="view/fullname|nothing">Username</span>'s profile
            </h2>
        </tal:block>

        <div tal:replace="structure view/profile/render|nothing" />
        <div tal:replace="structure view/password/render|nothing" />

    </tal:user>
    
</tal:define>