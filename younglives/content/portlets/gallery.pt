<div xmlns="http://www.w3.org/1999/xhtml"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     i18n:domain="younglives.content"
     class="portlet" id="gallery-portlet"
     tal:define="gallery view/gallery;
                 image view/first_image">

	<div class="caption">
        <a href="#" title=""
              tal:attributes="href gallery/getURL;
                                      title gallery/Title"
            ><img src="#" width="240"
                       tal:attributes="src string:${image/absolute_url}/image_portlet" /></a>
	    <p><a href="#" title=""
	                tal:attributes="href gallery/getURL;
	                                        title gallery/Title"
                    ><span class="icon-caption">&gt;</span>
                    <span tal:replace="gallery/Title" /></a></p>
	</div>

</div>
