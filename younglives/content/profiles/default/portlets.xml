<?xml version="1.0"?>
<portlets xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="younglives.policy">
    
    <portlet addview="younglives.portlets.Gallery" 
        title="Gallery portlet"
        description="A portlet which shows image with link to gallery it's coming from."
        i18n:attributes="title title_gallery_portlet;
                                   description description_gallery_portlet">
        <for interface="plone.app.portlets.interfaces.IRightColumn" />
    </portlet>
    
    <portlet addview="younglives.portlets.KeyResources" 
        title="Key resources"
        description="A portlet which shows context related resources"
        i18n:attributes="title title_key-resources_portlet;
                                   description description_key-resources_portlet">
        <for interface="plone.app.portlets.interfaces.IRightColumn" />
    </portlet>

    <portlet addview="younglives.portlets.Latest" title="Latest items"
        description="A portlet which shows latest items"
        i18n:attributes="title title_latest_portlet;
                                   description description_latest_portlet">
        <for interface="plone.app.portlets.interfaces.IRightColumn" />
    </portlet>
    
    <portlet addview="younglives.portlets.RelatedResources" 
        title="Related resources"
        description="A portlet which shows context keywords matching items"
        i18n:attributes="title title_related-resources_portlet;
                                   description description_related-resources_portlet">
        <for interface="plone.app.portlets.interfaces.IRightColumn" />
    </portlet>
 

</portlets>